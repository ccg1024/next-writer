{
  "compilerOptions": {
    "types": ["@emotion/react/types/css-prop"],
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "_window_type": ["src/types/window.d.ts"],
      "_common_type": ["src/types/common.d.ts"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
